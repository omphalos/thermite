{
  "name": "thermite",
  "version": "0.0.5",
  "description": "JavaScript live code reloading utility for Node and browsers",
  "main": "thermite.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/omphalos/thermite"
  },
  "keywords": [
    "JavaScript",
    "hot-swap",
    "hot-load",
    "hot-reload",
    "live-reload",
    "live-edit",
    "instrumentation",
    "ast",
    "abstract-syntax-tree",
    "swap",
    "swapping",
    "hot-swapping",
    "livereload",
    "reload",
    "live"
  ],
  "author": "omphalos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/omphalos/thermite/issues"
  },
  "homepage": "https://github.com/omphalos/thermite",
  "dependencies": {
    "falafel": "1.2.0",
    "googlediff": "0.1.0",
    "survivor": "^0.0.3"
  },
  "devDependencies": {
    "bumpt": "0.0.4",
    "coveralls": "2.11.4",
    "istanbul": "0.3.19",
    "minilint": "0.0.12",
    "nodemon": "1.4.1",
    "tape": "4.2.0",
    "uglifyjs": "2.4.10",
    "zuul": "3.3.1"
  },
  "scripts": {
    "test": "npm run lint; npm run tape; npm run cover; npm run zuul",
    "zuul": "./node_modules/.bin/zuul -- tests.js",
    "tape": "./node_modules/.bin/tape ./tests.js",
    "watch": "./node_modules/.bin/nodemon ./tests.js",
    "cover": "./node_modules/.bin/istanbul cover ./tests.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "lint": "./node_modules/.bin/minilint",
    "bundle": "./node_modules/.bin/browserify thermite.js -s thermite > bundle.js",
    "minify": "cat bundle.js | ./node_modules/.bin/uglifyjs > thermite.min.js",
    "count": "gzip -c thermite.min.js | wc -c",
    "build": "npm run bundle; npm run minify; npm run count; rm bundle.js",
    "release": "npm run build; npm run test; ./node_modules/.bin/bumpt"
  }
}