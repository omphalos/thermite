{
  "name": "thermite",
  "version": "0.0.1",
  "description": "JavaScript live code reloading utility for Node and browsers",
  "main": "thermite.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/omphalos/thermite"
  },
  "keywords": [
    "JavaScript"
  ],
  "author": "omphalos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/omphalos/thermite/issues"
  },
  "homepage": "https://github.com/omphalos/thermite",
  "dependencies": {
    "falafel": "1.2.0",
    "googlediff": "0.1.0",
    "survivor": "^0.0.3"
  },
  "devDependencies": {
    "coveralls": "2.11.4",
    "istanbul": "0.3.19",
    "minilint": "^0.0.10",
    "nodemon": "1.4.1",
    "tape": "4.2.0",
    "uglifyjs": "2.4.10",
    "zuul": "3.3.1"
  },
  "scripts": {
    "test": "npm run zuul",
    "zuul": "./node_modules/.bin/zuul -- tests.js",
    "tape": "./node_modules/.bin/tape ./tests.js",
    "watch": "./node_modules/.bin/nodemon ./tests.js",
    "test-all": "npm run lint && npm run cover && npm run zuul",
    "cover": "./node_modules/.bin/istanbul cover ./tests.js",
    "coveralls": "./node_modules/.bin/istanbul cover ./tests.js --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf ./coverage",
    "lint": "./node_modules/.bin/minilint '**/*.js' -e 'node_modules/**' '**/*.min.js' 'coverage/**'",
    "build": "./node_modules/.bin/browserify -s thermite -r ./ | ./node_modules/.bin/uglifyjs > thermite.min.js; gzip -c thermite.min.js | wc -c",
    "release": "npm run build && npm run test-all && ./node_modules/.bin/bumpt"
  }
}
