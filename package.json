{
  "name": "thermite",
  "version": "0.0.1",
  "description": "JavaScript live code reloading utility for Node and browsers",
  "main": "thermite.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/omphalos/thermite"
  },
  "keywords": [
    "JavaScript"
  ],
  "author": "omphalos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/omphalos/thermite/issues"
  },
  "homepage": "https://github.com/omphalos/thermite",
  "dependencies": {
    "falafel": "^1.2.0",
    "googlediff": "^0.1.0",
    "survivor": "^0.0.3"
  },
  "devDependencies": {
    "istanbul": "^0.3.19",
    "minilint": "0.0.10",
    "nodemon": "^1.4.1",
    "nodeunit": "^0.9.1",
    "tape": "^4.2.0",
    "uglifyjs": "^2.4.10",
    "zuul": "^3.3.1"
  },
  "scripts": {
    "cover": "./node_modules/.bin/istanbul cover ./tests.js",
    "test": "./node_modules/.bin/zuul -- tests.js",
    "tape": "./node_modules/.bin/tape ./tests.js",
    "watch": "./node_modules/.bin/nodemon ./tests.js",
    "test-all": "npm run cover && npm run zuul",
    "lint": "./node_modules/.bin/minilint '**/*.js' -e 'node_modules/**' '**/*.min.js' 'coverage/**'",
    "build-min": "./node_modules/.bin/browserify -s thermite -r ./ | ./node_modules/.bin/uglifyjs > thermite.min.js; gzip -c thermite.min.js | wc -c",
    "build-tests": "./node_modules/.bin/browserify ./tests.js > tests.browser.js",
    "build": "npm run build-min && npm run build-tests"
  }
}
